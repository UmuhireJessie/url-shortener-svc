{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "src/routes/index.ts", "src/database/config/config.ts"],
  "exclude": ["node_modules"]
}
